@inherits InviteModelComponent

@code
{
    [Inject]
    public required ISnackbar Snackbar { get; init; }

    protected override void OnStatusChanged()
    {
        if (Model.Status is null)
        {
            return;
        }

        var severity = Model.Status.Severity switch
        {
            StatusSeverity.SUCCESS => Severity.Success,
            StatusSeverity.WARNING => Severity.Warning,
            StatusSeverity.ERROR => Severity.Error,
            _ => Severity.Info
        };

        InvokeAsync(() => Snackbar.Add(Model.Status.Message, severity));
    }
}
