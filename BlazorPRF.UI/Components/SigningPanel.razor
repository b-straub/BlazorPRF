@inherits PrfModelComponent
@inject ISigningService SigningService
@inject ISnackbar Snackbar
@inject IClipboard Clipboard
@using System.Text.Json

<MudCard>
    <MudCardHeader>
        <CardHeaderAvatar>
            <MudIcon Icon="@Icons.Material.Filled.VerifiedUser" Color="Color.Primary" />
        </CardHeaderAvatar>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">Digital Signatures</MudText>
            <MudText Typo="Typo.body2" Class="mud-text-secondary">Sign and verify messages with Ed25519</MudText>
        </CardHeaderContent>
    </MudCardHeader>

    <MudCardContent>
        @if (Model is { HasKeys: false, RequiresOnDemandAuth: false })
        {
            <MudAlert Severity="Severity.Warning" Class="mb-4">
                Please derive keys first using the authentication panel.
            </MudAlert>
        }

        <MudTabs Elevation="0" Rounded="true" ApplyEffectsToContainer="true" Class="tabs-no-scroll mb-4">
            <MudTabPanel Text="Sign">
                <MudTextField @bind-Value="_messageToSign"
                              Label="Message to Sign"
                              Variant="Variant.Outlined"
                              Lines="4"
                              Class="mt-4 mb-4"
                              Immediate="true"
                              Disabled="@(_isProcessing || Model is { HasKeys: false, RequiresOnDemandAuth: false })" />

                <MudButton Color="Color.Primary"
                           Variant="Variant.Filled"
                           StartIcon="@Icons.Material.Filled.Create"
                           OnClick="SignAsync"
                           Disabled="@(!CanSign)">
                    @if (_isProcessing)
                    {
                        <MudProgressCircular Indeterminate="true" Size="Size.Small" Class="mr-2" />
                        <span>Signing...</span>
                    }
                    else
                    {
                        <span>Sign Message</span>
                    }
                </MudButton>

                @if (_armoredSignature is not null)
                {
                    <MudPaper Class="pa-4 mt-4" Elevation="0" Outlined="true">
                        <MudStack Row="true" AlignItems="AlignItems.Start" Justify="Justify.SpaceBetween">
                            <div Style="flex: 1; overflow: hidden;">
                                <MudText Typo="Typo.caption" Class="mud-text-secondary">Signed Message (Armored)</MudText>
                                <MudText Typo="Typo.body2" Style="font-family: monospace; white-space: pre-wrap; word-break: break-all;">
                                    @_armoredSignature
                                </MudText>
                            </div>
                            <MudTooltip Text="Copy to clipboard">
                                <MudIconButton Icon="@Icons.Material.Filled.ContentCopy"
                                               Color="Color.Primary"
                                               OnClick="CopySignatureAsync" />
                            </MudTooltip>
                        </MudStack>
                    </MudPaper>
                }
            </MudTabPanel>

            <MudTabPanel Text="Verify">
                <MudTextField @bind-Value="_armoredToVerify"
                              Label="Armored Signed Message"
                              Variant="Variant.Outlined"
                              Lines="8"
                              Class="mt-4 mb-4"
                              Style="font-family: monospace;"
                              Placeholder="Paste -----BEGIN PFA SIGNED MESSAGE----- block here"
                              Immediate="true"
                              Disabled="@_isProcessing" />

                <MudButton Color="Color.Secondary"
                           Variant="Variant.Filled"
                           StartIcon="@Icons.Material.Filled.CheckCircle"
                           OnClick="VerifyAsync"
                           Disabled="@(!CanVerify)">
                    @if (_isProcessing)
                    {
                        <MudProgressCircular Indeterminate="true" Size="Size.Small" Class="mr-2" />
                        <span>Verifying...</span>
                    }
                    else
                    {
                        <span>Verify Signature</span>
                    }
                </MudButton>

                @if (_verificationResult is not null)
                {
                    <MudAlert Severity="@(_verificationResult.Value ? Severity.Success : Severity.Error)"
                              Class="mt-4"
                              Variant="Variant.Outlined">
                        @if (_verificationResult.Value)
                        {
                            <MudStack Row="true" AlignItems="AlignItems.Center">
                                <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Class="mr-2" />
                                <span>Signature is VALID</span>
                            </MudStack>
                            @if (_verifiedMessage is not null)
                            {
                                <MudText Typo="Typo.body2" Class="mt-2">
                                    <strong>Message:</strong> @_verifiedMessage.Message
                                </MudText>
                                <MudText Typo="Typo.caption" Class="mud-text-secondary">
                                    Signed: @DateTimeOffset.FromUnixTimeSeconds(_verifiedMessage.TimestampUnix).LocalDateTime.ToString("g")
                                </MudText>
                            }
                        }
                        else
                        {
                            <MudStack Row="true" AlignItems="AlignItems.Center">
                                <MudIcon Icon="@Icons.Material.Filled.Cancel" Class="mr-2" />
                                <span>Signature is INVALID</span>
                            </MudStack>
                        }
                    </MudAlert>
                }
            </MudTabPanel>
        </MudTabs>

        @if (_errorMessage is not null)
        {
            <MudAlert Severity="Severity.Error" Class="mt-4" Variant="Variant.Outlined">
                @_errorMessage
            </MudAlert>
        }
    </MudCardContent>
</MudCard>

@code {
    private string _messageToSign = string.Empty;
    private string _armoredToVerify = string.Empty;
    private bool _isProcessing;
    private string? _errorMessage;
    private string? _armoredSignature;
    private bool? _verificationResult;
    private SignedMessage? _verifiedMessage;

    private bool CanSign => (Model.HasKeys || Model.RequiresOnDemandAuth) && !_isProcessing && !string.IsNullOrWhiteSpace(_messageToSign);
    private bool CanVerify => !_isProcessing && !string.IsNullOrWhiteSpace(_armoredToVerify);

    private async Task SignAsync()
    {
        if (!CanSign)
        {
            return;
        }

        _isProcessing = true;
        _errorMessage = null;
        _armoredSignature = null;

        try
        {
            // Ensure keys are available (triggers WebAuthn if needed)
            if (!await Model.EnsureKeysAsync())
            {
                _errorMessage = "Authentication cancelled or failed";
                return;
            }

            var result = await SigningService.CreateSignedMessageAsync(_messageToSign, Model.Salt);

            if (result is { Success: true, Value: not null })
            {
                var json = JsonSerializer.Serialize(result.Value, SignedMessageJsonContext.Default.SignedMessage);
                _armoredSignature = PrfArmor.ArmorSignedMessage(json);
            }
            else if (result.ErrorCode == PrfErrorCode.KEY_DERIVATION_FAILED)
            {
                Model.OnKeyDerivationFailed();
                _errorMessage = "Keys expired. Please try again.";
            }
            else
            {
                _errorMessage = result.Error ?? "Signing failed";
            }
        }
        catch (Exception ex)
        {
            _errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            _isProcessing = false;
        }
    }

    private async Task VerifyAsync()
    {
        if (!CanVerify)
        {
            return;
        }

        _isProcessing = true;
        _errorMessage = null;
        _verificationResult = null;
        _verifiedMessage = null;

        try
        {
            var json = PrfArmor.UnArmorSignedMessage(_armoredToVerify);
            if (json is null)
            {
                _errorMessage = "Invalid armored signed message format";
                return;
            }

            var signedMessage = JsonSerializer.Deserialize(json, SignedMessageJsonContext.Default.SignedMessage);
            if (signedMessage is null)
            {
                _errorMessage = "Failed to parse signed message";
                return;
            }

            // Reconstruct the data that was signed: "{timestamp}:{message}"
            var dataToVerify = $"{signedMessage.TimestampUnix}:{signedMessage.Message}";
            _verificationResult = await SigningService.VerifyAsync(dataToVerify, signedMessage.Signature, signedMessage.PublicKey);
            if (_verificationResult == true)
            {
                _verifiedMessage = signedMessage;
            }
        }
        catch (Exception ex)
        {
            _errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            _isProcessing = false;
        }
    }

    private async Task CopySignatureAsync()
    {
        if (string.IsNullOrEmpty(_armoredSignature))
        {
            return;
        }

        try
        {
            await Clipboard.SetTextAsync(_armoredSignature);
            Snackbar.Add("Signed message copied!", Severity.Success);
        }
        catch
        {
            Snackbar.Add("Failed to copy", Severity.Error);
        }
    }
}
