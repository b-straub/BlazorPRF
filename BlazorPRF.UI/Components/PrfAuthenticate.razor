@using BlazorPRF.Shared.Formatting
@inherits PrfModelComponent

<MudCard>
    <MudCardHeader>
        <CardHeaderAvatar>
            <MudIcon Icon="@Icons.Material.Filled.Key" Color="Color.Primary" />
        </CardHeaderAvatar>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">Derive Keys</MudText>
            <MudText Typo="Typo.body2" Class="mud-text-secondary">Authenticate to derive encryption keys</MudText>
        </CardHeaderContent>
    </MudCardHeader>

    <MudCardContent>
        <MudTextField @bind-Value="Model.Salt"
                      Label="Salt"
                      Variant="Variant.Outlined"
                      HelperText="Key derivation salt (must be consistent for same keys)"
                      Class="mb-4"
                      Disabled="@Model.IsExecuting" />

        <MudTextField @bind-Value="Model.CredentialId"
                      Label="Credential ID (optional)"
                      Variant="Variant.Outlined"
                      HelperText="Leave empty to use platform credential selector"
                      Class="mb-4"
                      Disabled="@Model.IsExecuting" />

        @if (Model.ErrorMessage is not null)
        {
            <MudAlert Severity="Severity.Error" Class="mb-4" Variant="Variant.Outlined">
                @Model.ErrorMessage
            </MudAlert>
        }

        @if (Model is { HasKeys: true, PublicKey: not null })
        {
            <MudAlert Severity="Severity.Success" Class="mb-4" Variant="Variant.Outlined">
                @Model.SuccessMessage
            </MudAlert>

            <PublicKeyDisplay PublicKey="@Model.PublicKey"
                               Metadata="@Model.KeyMetadata"
                               MetadataChanged="@OnMetadataChanged" />
        }
    </MudCardContent>

    <MudCardActions>
        <MudButtonAsyncRx Command="@(string.IsNullOrWhiteSpace(Model.CredentialId) ? Model.DeriveKeysDiscoverable : Model.DeriveKeys)"
                          Variant="Variant.Filled"
                          Color="Color.Primary"
                          StartIcon="@Icons.Material.Filled.Fingerprint">
            Derive Keys
        </MudButtonAsyncRx>

        @if (Model.HasKeys)
        {
            <MudButtonRx Command="@Model.ClearKeys"
                         Color="Color.Secondary"
                         Variant="Variant.Outlined"
                         StartIcon="@Icons.Material.Filled.Clear"
                         Class="ml-2">
                Clear Keys
            </MudButtonRx>
        }
    </MudCardActions>
</MudCard>

@code {
    [Parameter]
    public string? CredentialId { get; set; }

    protected override void OnParametersSet()
    {
        if (!string.IsNullOrEmpty(CredentialId))
        {
            Model.CredentialId = CredentialId;
        }
    }

    private async Task OnMetadataChanged(PublicKeyMetadata? metadata)
    {
        await Model.UpdateKeyMetadataAsync(metadata);
    }
}
