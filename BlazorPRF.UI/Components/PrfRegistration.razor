@inherits PrfModelComponent

<MudCard>
    <MudCardHeader>
        <CardHeaderAvatar>
            <MudIcon Icon="@Icons.Material.Filled.Fingerprint" Color="Color.Primary" />
        </CardHeaderAvatar>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">Register Passkey</MudText>
            <MudText Typo="Typo.body2" Class="mud-text-secondary">Create a new passkey with PRF support</MudText>
        </CardHeaderContent>
    </MudCardHeader>

    <MudCardContent>
        @if (!Model.IsPrfSupported.HasValue)
        {
            <MudStack Row="true" AlignItems="AlignItems.Center">
                <MudProgressCircular Indeterminate="true" Size="Size.Small" />
                <MudText>Checking PRF support...</MudText>
            </MudStack>
        }
        else if (Model.IsPrfSupported == false)
        {
            <MudAlert Severity="Severity.Error" Class="mb-4">
                PRF extension is not supported on this device or browser.
                This library requires WebAuthn PRF extension support.
            </MudAlert>
        }
        else
        {
            <MudTextField @bind-Value="_displayName"
                          Label="Display Name (optional)"
                          Variant="Variant.Outlined"
                          HelperText="A friendly name for this passkey"
                          Class="mb-4"
                          Disabled="@Model.IsExecuting" />

            @if (Model.ErrorMessage is not null)
            {
                <MudAlert Severity="Severity.Error" Class="mb-4" Variant="Variant.Outlined">
                    @Model.ErrorMessage
                </MudAlert>
            }

            @if (Model.SuccessMessage is not null)
            {
                <MudAlert Severity="Severity.Success" Class="mb-4" Variant="Variant.Outlined">
                    @Model.SuccessMessage
                </MudAlert>
            }
        }
    </MudCardContent>

    <MudCardActions>
        <MudButtonAsyncRxOf Command="@Model.Register"
                            Parameter="@DisplayName"
                            Variant="Variant.Filled"
                            Color="Color.Primary"
                            StartIcon="@Icons.Material.Filled.Key">
            Register Passkey
        </MudButtonAsyncRxOf>
    </MudCardActions>
</MudCard>

@code {
    private string _displayName = string.Empty;

    [Parameter]
    public EventCallback<string> OnRegistered { get; set; }

    private string? DisplayName => string.IsNullOrWhiteSpace(_displayName) ? null : _displayName;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        // Notify when credential is registered
        if (Model.CredentialId is not null && Model.SuccessMessage is not null)
        {
            await OnRegistered.InvokeAsync(Model.CredentialId);
        }
    }
}
